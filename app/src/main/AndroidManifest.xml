<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alenbeyond.runoob">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.alenbeyond.runoob.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.alenbeyond.runoob.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.alenbeyond.runoob.activity.ChapterActivity"
            android:label="@string/title_activity_chapter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.alenbeyond.runoob.activity.DetailActivity" />
        <activity
            android:name="com.alenbeyond.runoob.activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.alenbeyond.runoob.activity.TestActivity" />
    </application>

</manifest>